{
	"extends": "tsconfig/react-library.json",
	"compilerOptions": {
		"strict": true,
		"plugins": [{ "name": "next" }],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"tailwind.config.ts"
	],
	"exclude": ["node_modules"]
}
